{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    "helpers:pinGitHubActionDigests",
    ":disableRateLimiting",
    ":semanticCommits"
  ],
  dependencyDashboardTitle: "Renovate Dashboard",
  schedule: [
    "* * * * *"
  ],
  suppressNotifications: [
    "prEditedNotification",
    "prIgnoreNotification"
  ],
  customManagers: [
    {
      customType: "regex",
      description: "Process annotated dependencies",
      managerFilePatterns: ["/\\.ya?ml$/"],
      matchStrings: [
        "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( versioning=(?<versioning>\\S+))?\\n.+(:\\s|=)(&\\S+\\s)?(?<currentValue>\\S+)",
      ],
      datasourceTemplate: "{{#if datasource}}{{{datasource}}}{{else}}github-releases{{/if}}",
      versioningTemplate: "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}",
    },
  ],
  customDatasources: {
    "dotnet8": {
      defaultRegistryUrlTemplate: "https://builds.dotnet.microsoft.com/dotnet/release-metadata/8.0/releases.json",
      format: "json",
      transformTemplates: ['{"releases": $.releases.{"version": $."release-version", "releaseTimestamp": $."release-date", "changelogUrl": $."release-notes", "sourceUrl": "https://github.com/dotnet/core"}}']
    },
    "dotnet8-sdk": {
      defaultRegistryUrlTemplate: "https://builds.dotnet.microsoft.com/dotnet/release-metadata/8.0/releases.json",
      format: "json",
      transformTemplates: ['{"releases": $.releases.{"version": $.sdk.version, "releaseTimestamp": $."release-date", "changelogUrl": $."release-notes", "sourceUrl": "https://github.com/dotnet/sdk"}}']
    },
    "dotnet8-runtime": {
      defaultRegistryUrlTemplate: "https://builds.dotnet.microsoft.com/dotnet/release-metadata/8.0/releases.json",
      format: "json",
      transformTemplates: ['{"releases": $.releases.{"version": $.runtime.version, "releaseTimestamp": $."release-date", "changelogUrl": $."release-notes", "sourceUrl": "https://github.com/dotnet/runtime"}}']
    },
    "dotnet8-aspnetcore-runtime": {
      defaultRegistryUrlTemplate: "https://builds.dotnet.microsoft.com/dotnet/release-metadata/8.0/releases.json",
      format: "json",
      transformTemplates: ['{"releases": $.releases.{"version": $."aspnetcore-runtime".version, "releaseTimestamp": $."release-date", "changelogUrl": $."release-notes", "sourceUrl": "https://github.com/dotnet/runtime"}}']
    },
  },
  packageRules: [
    {
      description: ".NET 8 Group",
      groupName: "dotnet8",
      matchManagers: ["custom.regex"],
      matchPackageNames: ["/dotnet8/"],
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      minimumGroupSize: 5,
    },
    {
      description: "GitHub Actions Group",
      groupName: "github-actions",
      matchManagers: ["github-actions"],
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
    },
    {
      matchUpdateTypes: ["major"],
      semanticCommitType: "feat",
      commitMessagePrefix: "{{semanticCommitType}}({{semanticCommitScope}})!:",
      commitMessageExtra: "( {{currentVersion}} ➔ {{newVersion}} )",
    },
    {
      matchUpdateTypes: ["minor"],
      semanticCommitType: "feat",
      commitMessageExtra: "( {{currentVersion}} ➔ {{newVersion}} )",
    },
    {
      matchUpdateTypes: ["patch"],
      semanticCommitType: "fix",
      commitMessageExtra: "( {{currentVersion}} ➔ {{newVersion}} )",
    },
    {
      matchUpdateTypes: ["digest"],
      semanticCommitType: "chore",
      commitMessageExtra: "( {{currentDigestShort}} ➔ {{newDigestShort}} )",
    },
    {
      matchManagers: ["github-actions"],
      semanticCommitType: "ci",
      semanticCommitScope: "github-action",
      commitMessageTopic: "action {{depName}}",
    },
    {
      matchUpdateTypes: ["major"],
      labels: ["type/major"],
    },
    {
      matchUpdateTypes: ["minor"],
      labels: ["type/minor"],
    },
    {
      matchUpdateTypes: ["patch"],
      labels: ["type/patch"],
    },
    {
      matchManagers: ["github-actions"],
      addLabels: ["renovate/github-action"],
    },
    {
      description: ["Allowed Node Version for Github Actions"],
      matchManagers: ["github-actions"],
      matchPackageNames: ["/^node$/"],
      allowedVersions: "<=18",
    }
  ]
}
