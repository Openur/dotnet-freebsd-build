{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    "helpers:pinGitHubActionDigests",
    ":disableRateLimiting",
    ":semanticCommits"
  ],
  dependencyDashboardTitle: "Renovate Dashboard",
  schedule: [
    "* * * * *"
  ],
  suppressNotifications: [
    "prEditedNotification",
    "prIgnoreNotification"
  ],
  customManagers: [
    {
      customType: "regex",
      description: "Process annotated dependencies",
      managerFilePatterns: ["/\\.ya?ml$/"],
      matchStrings: [
        "datasource=(?<datasource>\\S+)(?: packageName=(?<packageName>\\S+))? depName=(?<depName>\\S+)( versioning=(?<versioning>\\S+))?\\n.+(:\\s|=)(&\\S+\\s)?(?<currentValue>\\S+)",
      ],
      datasourceTemplate: "{{#if datasource}}{{{datasource}}}{{else}}github-releases{{/if}}",
      versioningTemplate: "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}",
    },
  ],
  packageRules: [
    {
      description: ".NET 9 Group",
      groupName: "dotnet9",
      matchDatasources: ["github-tags"],
      matchPackageNames: [
        "/dotnet9-core/",
        "/dotnet9-runtime/",
        "/dotnet9-aspnetcore/",
        "/dotnet9-sdk/"
      ],
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      minimumGroupSize: 4,
    },
    {
      description: ".NET 8 Group",
      groupName: "dotnet8",
      matchDatasources: ["github-tags"],
      matchPackageNames: [
        "/dotnet8-core/",
        "/dotnet8-runtime/",
        "/dotnet8-aspnetcore/",
        "/dotnet8-sdk/",
        "/dotnet8-installer/",
      ],
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      minimumGroupSize: 5,
    },
    {
      description: "GitHub Actions Group",
      groupName: "github-actions",
      matchManagers: ["github-actions"],
      matchPackageNames: [
        "/^actions\//",
        "/^github\//",
        "/^docker\//",
      ],
      matchDepTypes: [
        "action",
      ],
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
    },
    {
      matchUpdateTypes: ["major"],
      semanticCommitType: "feat",
      commitMessagePrefix: "{{semanticCommitType}}({{semanticCommitScope}})!:",
      commitMessageExtra: "( {{currentVersion}} ➔ {{newVersion}} )",
    },
    {
      matchUpdateTypes: ["minor"],
      semanticCommitType: "feat",
      commitMessageExtra: "( {{currentVersion}} ➔ {{newVersion}} )",
    },
    {
      matchUpdateTypes: ["patch"],
      semanticCommitType: "fix",
      commitMessageExtra: "( {{currentVersion}} ➔ {{newVersion}} )",
    },
    {
      matchUpdateTypes: ["digest"],
      semanticCommitType: "chore",
      commitMessageExtra: "( {{currentDigestShort}} ➔ {{newDigestShort}} )",
    },
    {
      matchManagers: ["github-actions"],
      semanticCommitType: "ci",
      semanticCommitScope: "github-action",
      commitMessageTopic: "action {{depName}}",
    },
    {
      matchUpdateTypes: ["major"],
      labels: ["type/major"],
    },
    {
      matchUpdateTypes: ["minor"],
      labels: ["type/minor"],
    },
    {
      matchUpdateTypes: ["patch"],
      labels: ["type/patch"],
    },
    {
      matchManagers: ["github-actions"],
      addLabels: ["renovate/github-action"],
    },
    {
      description: "Disable major updates for dotnet",
      enabled: false,
      matchPackageNames: ["/dotnet/"],
      matchUpdateTypes: ["major"],
    }
  ]
}
