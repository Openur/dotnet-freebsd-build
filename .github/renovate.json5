{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'helpers:pinGitHubActionDigests',
    ':disableRateLimiting',
    ':semanticCommits'
  ],
  dependencyDashboardTitle: 'Renovate Dashboard',
  schedule: [
    '* * * * *'
  ],
  suppressNotifications: [
    'prEditedNotification',
    'prIgnoreNotification'
  ],
  customDatasources: {
    "dotnet8": {
      defaultRegistryUrlTemplate: 'https://builds.dotnet.microsoft.com/dotnet/release-metadata/8.0/releases.json',
      format: 'json',
      transformTemplates: ['{"releases":$.releases.{"name": $."release-version", "changelogUrl": $."release-notes", "sourceUrl":"https://github.com/dotnet/core"}}']
    },
    "dotnet8-sdk": {
      defaultRegistryUrlTemplate: 'https://builds.dotnet.microsoft.com/dotnet/release-metadata/8.0/releases.json',
      format: 'json',
      transformTemplates: ['{"releases":$.releases.{"name": $.sdk.version" "changelogUrl": $."release-notes", "sourceUrl":"https://github.com/dotnet/sdk"}}']
    },
    "dotnet8-runtime": {
      defaultRegistryUrlTemplate: 'https://builds.dotnet.microsoft.com/dotnet/release-metadata/8.0/releases.json',
      format: 'json',
      transformTemplates: ['{"releases":$.releases.{"name": $.runtime.version" "changelogUrl": $."release-notes", "sourceUrl":"https://github.com/dotnet/runtime"}}']
    },
    "dotnet8-aspnetcore-runtime": {
      defaultRegistryUrlTemplate: 'https://builds.dotnet.microsoft.com/dotnet/release-metadata/8.0/releases.json',
      format: 'json',
      transformTemplates: ['{"releases":$.releases.{"name": $."aspnetcore-runtime".version" "changelogUrl": $."release-notes", "sourceUrl":"https://github.com/dotnet/runtime"}}']
    },
  },
  packageRules: [
    {
      description: 'GitHub Actions Group',
      groupName: 'GitHub Actions',
      matchManagers: ['github-actions'],
      group: {
        commitMessageTopic: '{{{groupName}}} group',
      },
    },
    {
      matchUpdateTypes: ['major'],
      semanticCommitType: 'feat',
      commitMessagePrefix: '{{semanticCommitType}}({{semanticCommitScope}})!:',
      commitMessageExtra: '( {{currentVersion}} ➔ {{newVersion}} )',
    },
    {
      matchUpdateTypes: ['minor'],
      semanticCommitType: 'feat',
      commitMessageExtra: '( {{currentVersion}} ➔ {{newVersion}} )',
    },
    {
      matchUpdateTypes: ['patch'],
      semanticCommitType: 'fix',
      commitMessageExtra: '( {{currentVersion}} ➔ {{newVersion}} )',
    },
    {
      matchUpdateTypes: ['digest'],
      semanticCommitType: 'chore',
      commitMessageExtra: '( {{currentDigestShort}} ➔ {{newDigestShort}} )',
    },
    {
      matchManagers: ['github-actions'],
      semanticCommitType: 'ci',
      semanticCommitScope: 'github-action',
      commitMessageTopic: 'action {{depName}}',
    },
    {
      matchUpdateTypes: ['major'],
      labels: ['type/major'],
    },
    {
      matchUpdateTypes: ['minor'],
      labels: ['type/minor'],
    },
    {
      matchUpdateTypes: ['patch'],
      labels: ['type/patch'],
    },
    {
      matchManagers: ['github-actions'],
      addLabels: ['renovate/github-action'],
    },
  ]
}
